/* swiper轮播 */

.slide swiper {
  width: 100vw;
}

.slide swiper image {
  height: 100%;
  width: 100%;
}

/* search框 */

.search-view {
  background: #f6f6f6;
  height: 60rpx;
  margin: 30rpx 30rpx 30rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  vertical-align: middle;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}

.search-text {
  line-height: 60rpx;
}

.search-icon {
  line-height: 60rpx;
  height: 30rpx;
}

/* 剩下的部分，需求大厅和产品大厅 */

.rest-container {
  width: 746rpx;
}

.demand-container {
  width: 100%;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  display: block;
  position: relative;
}

.product-container {
  width: 100%;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  display: block;
  position: relative;
}

.header {
  color: #8a8a8a;
  font-size: 30rpx;
}

.content {
  display: block;
  padding-left: 50rpx;
}

.content li {
  display: block;
  list-style: none;
  border-top-color: 1px solid #eee;
  font-family: "Open Sans", "Segoe UI", "Helvetica", sans-serif;
  font-size: 26rpx;
  line-height: 50rpx;
  height: 50rpx;
  color: #d6d6d6;
}

.exchange {
  position: absolute;
  right: 100rpx;
  top: 50%;
  margin-top: -35rpx;
}

.exchange image {
  width: 70rpx;
  height: 70rpx;
}
