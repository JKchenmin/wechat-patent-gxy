/* swiper轮播 */

.slide swiper {
  width: 100vw;
}

.slide swiper image {
  height: 100%;
  width: 100%;
}

/* search框 */

.search-view {
  background: #f6f6f6;
  height: 60rpx;
  margin: 30rpx 30rpx 30rpx;
  border-radius: 10rpx;
  font-size: 24rpx;
  text-align: center;
  vertical-align: middle;
  display: flex;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
}

.search-text {
  line-height: 60rpx;
}

.search-icon {
  line-height: 60rpx;
  height: 30rpx;
}

/* 剩下的部分，需求大厅和产品大厅 */

.rest-container {
  width: 746rpx;
}

.demand-container {
  width: 100%;
  background-color: beige;
}
.product-container{
  width: 100%;
  background-color: pink;
}