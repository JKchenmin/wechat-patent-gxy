.container {
  position: relative;
  height: 100vh;
  width: 100vw;
  background-color: #fff;
}

/* 聊天对话框 */

.scroll-view {
  height: calc(100vh - 100rpx);
  background-color: #f6f6f6;
  padding: 0 20rpx 20rpx;
  box-sizing: border-box;
}

.dialog-item {
  max-width: 470rpx;
  padding: 10rpx;
  margin-top: 15rpx;
  clear: both;
  background-color: #fff;
}

.avator {
  height: 60rpx;
  width: 60rpx;
}
.avator .img {
  height: 60rpx;
  width: 60rpx;
}

.content {
  font-size: 26rpx;
  font-family: SimSun, Arial, Helvetica, sans-serif;
  line-height: 30rpx;
  margin: 10rpx 10rpx;
  max-width: 380rpx;
  word-wrap:break-word;
}

.arrow-left-content {
  float: left;
  color: red;
}

.arrow-right-content {
  float: right;
  color: black;
}
.msg {
  display: block;
}
.cook,.hotel{
  width: 380rpx;
}
.info , .name{
  line-height: 30rpx;
  text-align: left;
  font-size: 24rpx;
  color: red;
}
/* 下面的输入框 */

.input-text {
  position: absolute;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #d1d1d1;
  box-sizing: border-box;
  padding: 15rpx 30rpx 0;
}

.input-mes {
  display: inline-block;
  width: 520rpx;
  height: 70rpx;
  border: 1px solid #dedede;
  border-radius: 16rpx;
  margin-right: 35rpx;
  margin-bottom: 30rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
}

.input-button {
  display: inline-block;
  vertical-align: top;
  width: 130rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
}
